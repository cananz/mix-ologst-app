<h2>New Cocktail</h2>
<%= form_for @cocktail do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>

  <%= f.collection_check_boxes(:ingredient_ids, @ingredients, :id, :name) %><br><br>

  <%= f.submit %>
<% end %>

<%= link_to "Something missing? Add an ingredient", new_ingredient_path %>
